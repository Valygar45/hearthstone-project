<html>
<body>
<table>
    <tr>
        <th>
            Game Id
        </th>
        <th>
            Joueur 1
        </th>
        <th>
            Score 1
        </th>
        <th>
            Score 2
        </th>
        <th>
            Joueur 2
        </th>
        <th>
            Etat
        </th>
    </tr>
    {% for game in games %}
        {% if game.etat == 3 %}
            <tr>
                <td>
                    {{ game.id }}
                </td>
                <td>
                    {% if game.joueur1.id == user.id %}
                        {{ game.joueur1 }}
                    {% else %}
                        <a href="{{ path('cp_user_checkProfile', {'id': game.joueur1.id}) }}">
                            {{ game.joueur1 }}
                        </a>
                    {% endif %}
                </td>

                <td>
                    {{ game.score1 }}
                </td>
                <td>
                    {{ game.score2 }}
                </td>
                <td>
                    {% if game.joueur2.id == user.id %}
                        {{ game.joueur2 }}
                    {% else %}
                        <a href="{{ path('cp_user_checkProfile', {'id': game.joueur2.id}) }}">
                            {{ game.joueur2 }}
                        </a>
                    {% endif %}
                </td>
                <td>
                    {{ game.etat }}
                </td>
            </tr>
        {% endif %}
    {% endfor %}
</table>
</body>
</html>